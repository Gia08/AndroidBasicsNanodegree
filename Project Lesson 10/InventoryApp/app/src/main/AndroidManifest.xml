<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.andreasschrade.inventoryapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Main">
        <activity android:name=".ui.ListProductsActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.AddProductActivity" />
        <activity android:name=".ui.EditProductPriceActivity" />
        <activity android:name=".ui.RemoveProductActivity" />
        <activity android:name=".ui.IncrementProductQuantity" />
    </application>

</manifest>