<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="de.andreasschrade.inventoryapp.ui.IncrementProductQuantity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/nav_increment_quantity_text"
        android:id="@+id/textIncrementTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Quantity you want to increment"
        android:id="@+id/inputIncrementQuantity"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/inputIncrementProductName"
        android:layout_alignRight="@+id/textIncrementTitle"
        android:layout_alignEnd="@+id/textIncrementTitle" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apply!"
        android:id="@+id/btnIncrement"
        android:layout_marginTop="124dp"
        android:onClick="incrementProductQuantity"
        android:layout_below="@+id/inputIncrementProductName"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Product Name"
        android:id="@+id/inputIncrementProductName"
        android:layout_below="@+id/textIncrementTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp" />

</RelativeLayout>
