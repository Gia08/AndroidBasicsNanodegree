<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/product_name"
        android:id="@+id/textProductNameValue"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nav_remove_text"
        android:id="@+id/btnRemoveProduct"
        android:onClick="removeProduct"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textProductNameValue"
        android:layout_alignEnd="@+id/textProductNameValue"
        android:layout_marginBottom="81dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nav_edit_price_text"
        android:id="@+id/btnEditPrice"
        android:onClick="modifyProductPrice"
        android:layout_above="@+id/btnIncreaseQuantity"
        android:layout_alignRight="@+id/btnRemoveProduct"
        android:layout_alignEnd="@+id/btnRemoveProduct" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order More"
        android:onClick="modifyProductQuantity"
        android:id="@+id/btnIncreaseQuantity"
        android:layout_above="@+id/btnRemoveProduct"
        android:layout_alignLeft="@+id/btnEditPrice"
        android:layout_alignStart="@+id/btnEditPrice" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact"
        android:onClick="contactProductDistributor"
        android:id="@+id/btnContact"
        android:layout_above="@+id/btnEditPrice"
        android:layout_alignLeft="@+id/btnEditPrice"
        android:layout_alignStart="@+id/btnEditPrice" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/priceTitle"
        android:id="@+id/textPrice"
        android:layout_below="@+id/textProductNameValue"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="47dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Price"
        android:id="@+id/textPriceValue"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/textPrice"
        android:layout_alignLeft="@+id/textPrice"
        android:layout_alignStart="@+id/textPrice" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Quantity"
        android:id="@+id/textQuantity"
        android:layout_alignTop="@+id/textPrice"
        android:layout_toRightOf="@+id/btnEditPrice"
        android:layout_toEndOf="@+id/btnEditPrice" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Quantity"
        android:id="@+id/textQuantityValue"
        android:layout_alignTop="@+id/textPriceValue"
        android:layout_alignLeft="@+id/textQuantity"
        android:layout_alignStart="@+id/textQuantity" />
</RelativeLayout>